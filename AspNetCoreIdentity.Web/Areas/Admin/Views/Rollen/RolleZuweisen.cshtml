
@{
    ViewData["Title"] = "RolleZuweisen";
}
@model List<AdminModell.RollenZuweisenAnscihtModell>
<h1>RolleZuweisen</h1>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="RolleZuweisen" asp-route-benutzerID="@ViewBag.benutzerID" method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].Existiert">
                    <label class="form-check-label" for="exampleCheck1">@Model[i].Name</label>
                    <input type="hidden"  asp-for="@Model[i].Name">
                    <input type="hidden"  asp-for="@Model[i].Id">
                </div>
            }            
            <div class="row mb-3 mt-3">
                <div class="col-md-6 offset-md-3 text-center">
                    <button type="submit" class="btn btn-outline-success">Rolle zuweisen</button>
                </div>
            </div>
        </form>
        <div class="float-end">
            <a asp-controller="Home" asp-action="BenutzerListe">Zurück zur Rollenseite</a>
        </div>
    </div>
</div>
