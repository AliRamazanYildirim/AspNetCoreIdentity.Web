
@{
    ViewData["Title"] = "BenutzerListe";
}
@model List<AdminModell.BenutzerAnsichtModell>
<h1>Mitgliederliste</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Benutzername</th>
            <th scope="col">Benutzer-email</th>
            <th scope="col">Rolle Operationen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>               
                <td>@item.BenutzerID</td>
                <td>@item.BenutzerName</td>
                <td>@item.BenutzerEmail</td>
                <td>
                    <a asp-controller="Rollen" asp-action="RolleZuweisen" asp-route-id="@item.BenutzerID">Rolle Operationen</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>